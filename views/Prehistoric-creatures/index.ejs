<form method="GET" action="/prehistoric_creatures">
    <label for="typeFilter">Filter by type:</label>
    <input type="text" name="typeFilter" id="typeFilter"/>
    <button type="submit">Filter</button>
</form>

<ul>
    <% creature.forEach((creature, index) => { %>
       <li>
           <a href="/prehistoric_creatures/<%= index %> "><%= creature.type %></a> 
           <a href="/prehistoric_creatures/edit/<%= index %>">Edit</a>

           <form method="POST" action="/prehistoric_creatures/<%= index %>/?_method=DELETE">
               <button type="submit">Delete</button>
           </form>
        
        </li> 
   <% }) %> 
</ul>
<a href="/">Homepage</a>